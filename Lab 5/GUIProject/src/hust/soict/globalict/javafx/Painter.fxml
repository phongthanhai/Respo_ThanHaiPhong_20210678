<BorderPane xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hust.soict.globalict.javafx.PainterController">
   <center>
      <BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="480.0" prefWidth="640.0" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
         </padding>
         <left>
            <VBox maxHeight="1.7976931348623157E308" BorderPane.alignment="CENTER">
               <children>
                  <TitledPane animated="false" text="Tools">
                    <content>
                      <AnchorPane maxWidth="1.7976931348623157E308">
                           <children>
                              <RadioButton layoutX="14.0" layoutY="14.0" mnemonicParsing="false" onAction="#blackInk" text="Pen">
                                 <toggleGroup>
                                    <ToggleGroup fx:id="tool" />
                                 </toggleGroup>
                              </RadioButton>
                              <RadioButton layoutX="14.0" layoutY="32.0" mnemonicParsing="false" onAction="#whiteInk" text="Eraser" toggleGroup="$tool" />
                           </children>
                        </AnchorPane>
                    </content>
                  </TitledPane>
                  <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#clearButtonPressed" text="Clear">
                     <font>
                        <Font size="13.0" />
                     </font>
                  </Button>
               </children>
            </VBox>
         </left>
         <center>
            <Pane fx:id="drawingAreaPane" onMouseDragged="#drawingAreaMouseDragged" prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: white;" BorderPane.alignment="CENTER" />
         </center>
      </BorderPane>
   </center>
